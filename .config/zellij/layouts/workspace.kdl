layout {
    tab name="main" {
        pane command="hx" args="." close_on_exit=true
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
    tab name="run" {
        pane
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
    tab name="git" {
        pane command="lazygit"
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
}
